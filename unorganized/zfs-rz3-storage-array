# TODO: Bulk encrypt drives

# Set up 
zpool create -f -o ashift=12 \
 -O acltype=posixacl \
 -O relatime=on \
 -O xattr=sa \
 -O dnodesize=legacy \
 -O normalization=formD \
 -O mountpoint=none \
 -O canmount=off \
 -O devices=off \
 -R /mnt \
 -O compression=zstd \
 -O dedup=on \
 zroot /dev/mapper/zroot
